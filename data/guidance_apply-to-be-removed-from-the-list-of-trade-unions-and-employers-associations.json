    "description":  "Guidance from the Certification Officer (CO).",
    "details":  {
                    "attachments":  [
                                        {
                                            "accessible":  false,
                                            "alternative_format_contact_email":  "info@certoffice.org",
                                            "attachment_type":  "file",
